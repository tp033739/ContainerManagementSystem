@model ContainerManagementSystem.Models.ShippingSchedule

@{
    ViewData["Title"] = "Edit shipping schedule";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" data-datetimepicker="true" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" data-datetimepicker="true" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureLocation" class="control-label"></label>
                <input asp-for="DepartureLocation" class="form-control" />
                <span asp-validation-for="DepartureLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalLocation" class="control-label"></label>
                <input asp-for="ArrivalLocation" class="form-control" />
                <span asp-validation-for="ArrivalLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VesselId" class="control-label"></label>
                <select asp-for="VesselId" class="form-control" asp-items="ViewBag.VesselId"></select>
                <span asp-validation-for="VesselId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
